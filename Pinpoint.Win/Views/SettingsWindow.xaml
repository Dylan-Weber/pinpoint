<Window x:Class="Pinpoint.Win.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pinpoint.Win.Views"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:fa="http://schemas.fontawesome.io/icons/" 
        mc:Ignorable="d"
        Title="Pinpoint Settings" Height="294" Width="504">
    <Border Margin="5">
        <TabControl>
            <!-- General settings -->
            <TabItem Header="General">
                <Border Margin="5">

                </Border>
            </TabItem>

            <!-- Snippet file sources -->
            <TabItem Header="Snippet Sources">
                <Border Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <DataGrid Grid.Row="0" x:Name="GrdSnippetSources"></DataGrid>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <xctk:IconButton x:Name="BtnDeleteSource">
                                <xctk:IconButton.Icon>
                                    <fa:ImageAwesome Height="16" Icon="Trash"></fa:ImageAwesome>
                                </xctk:IconButton.Icon>
                            </xctk:IconButton>

                            <xctk:IconButton x:Name="BtnAddSource">
                                <xctk:IconButton.Icon>
                                    <fa:ImageAwesome Height="16" Icon="Plus" Foreground="Green"></fa:ImageAwesome>
                                </xctk:IconButton.Icon>
                            </xctk:IconButton>
                        </StackPanel>

                        <GroupBox Grid.Row="3" Header="Help">
                            <Border Margin="5">
                                <TextBlock TextWrapping="Wrap">
                                    You can customize your snippet sources above, i.e. which files to search when a query is made. 
                                    Individual files (e.g. X.java) and directories are accepted. It may take a short while for newly added entries to be indexed.
                                    <LineBreak/>
                                    Caution: selecting a directory will recursively select ALL its subdirectories.</TextBlock>
                            </Border>
                        </GroupBox>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
    </Border>
</Window>
