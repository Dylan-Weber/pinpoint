<Window x:Class="Pinpoint.Win.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        xmlns:fa="http://schemas.fontawesome.io/icons/" 
        xmlns:commands="clr-namespace:Pinpoint.Win.Commands"
        MinWidth="550" 
        WindowStyle="None"
        ResizeMode="NoResize" 
        ShowInTaskbar="False" 
        AllowsTransparency="True"
        SizeToContent="WidthAndHeight" Topmost="True" Loaded="Window_Loaded" Background="{x:Null}">

    <Border CornerRadius="5" Background="#F2343434">
        <Grid>
            <!-- Tray icon -->
            <tb:TaskbarIcon x:Name="NotifyIcon"
                            IconSource="/Icons/Error.ico"
                            ToolTipText="Pinpoint"
                            TrayContextMenuOpen="NotifyIcon_TrayContextMenuOpen"
                            PreviewTrayContextMenuOpen="NotifyIcon_PreviewTrayContextMenuOpen">

                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <TextBlock Text="Hiding the sample window will not close it!" />
                        <MenuItem Header="_Show Sample Window [S]"
                                  Command="{commands:ShowWindowCommand}"
                                  CommandParameter="{Binding}" Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Width="16"
                                       Height="16"
                                       Source="/Images/Add.png" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <Separator />

                        <MenuItem Header="_Hide Sample Window [H]"
                                  Command="{commands:HideWindowCommand}"
                                  CommandParameter="{Binding}">
                            <MenuItem.Icon>
                                <Image Width="16"
                                       Height="16"
                                       Source="/Images/Remove.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>

            <!-- Main content -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto" MaxHeight="200"></RowDefinition>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Margin="5" Grid.Row="0" Grid.Column="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <xctk:WatermarkTextBox Grid.Column="0" x:Name="TxtQuery" Watermark="Find a snippet..." BorderThickness="0" KeepWatermarkOnGotFocus="True" FontSize="26" BorderBrush="{x:Null}" SelectionTextBrush="#FFD8D8D8" Foreground="#FFD8D8D8" Background="{x:Null}" CaretBrush="#FFD8D8D8" KeyUp="TxtQuery_KeyUp" TextChanged="TxtQuery_TextChanged"/>

                        <xctk:IconButton Grid.Column="1" x:Name="BtnSettings" Cursor="Hand" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}" MouseOverBackground="{x:Null}" MouseOverBorderBrush="{x:Null}" MousePressedBorderBrush="{x:Null}" MousePressedBackground="{x:Null}" Click="BtnSettings_Click" MouseEnter="BtnSettings_MouseEnter" MouseLeave="BtnSettings_MouseLeave">
                            <xctk:IconButton.Icon>
                                <fa:ImageAwesome Height="26" Icon="Cogs" Foreground="#FF575757"></fa:ImageAwesome>
                            </xctk:IconButton.Icon>
                        </xctk:IconButton>
                    </Grid>
                </Border>

                <!-- Results -->
                <ListBox x:Name="LstResults" Grid.Row="1" ItemsSource="{Binding Results}" ScrollViewer.VerticalScrollBarVisibility="Auto" KeyDown="LstResults_KeyDown" SelectionMode="Single" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0" MouseDoubleClick="LstResults_MouseDoubleClick">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="{x:Null}"></Setter>
                            <Setter Property="BorderBrush" Value="{x:Null}"></Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <StackPanel>
                                    <Label Foreground="#FFD8D8D8" Content="{Binding Identifier}"></Label>
                                    <Label Foreground="#FFE9E9E9" Content="{Binding Location}"></Label>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
    </Border>
</Window>